<h1>Listing summaries</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Title</th>
    <th>Body</th>
  </tr>

<% @summaries.each do |summary| %>
  <tr>
    <td><%=h summary.type %></td>
    <td><%=h summary.title %></td>
    <td><%=h summary.body %></td>
    <td><%= link_to 'Show', summary %></td>
    <td><%= link_to 'Edit', edit_summary_path(summary) %></td>
    <td><%= link_to 'Destroy', summary, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New summary', new_summary_path %>