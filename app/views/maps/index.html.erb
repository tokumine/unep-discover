<h1>Listing maps</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Content</th>
    <th>Tl</th>
    <th>Tr</th>
    <th>Bl</th>
    <th>Br</th>
  </tr>

<% @maps.each do |map| %>
  <tr>
    <td><%=h map.title %></td>
    <td><%=h map.description %></td>
    <td><%=h map.content_id %></td>
    <td><%=h map.tl %></td>
    <td><%=h map.tr %></td>
    <td><%=h map.bl %></td>
    <td><%=h map.br %></td>
    <td><%= link_to 'Show', map %></td>
    <td><%= link_to 'Edit', edit_map_path(map) %></td>
    <td><%= link_to 'Destroy', map, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New map', new_map_path %>