<h1>Listing tables</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Name</th>
    <th>Image file name</th>
    <th>Image content type</th>
    <th>Image file size</th>
    <th>Image updated at</th>
  </tr>

<% @tables.each do |table| %>
  <tr>
    <td><%=h table.type %></td>
    <td><%=h table.name %></td>
    <td><%=h table.image_file_name %></td>
    <td><%=h table.image_content_type %></td>
    <td><%=h table.image_file_size %></td>
    <td><%=h table.image_updated_at %></td>
    <td><%= link_to 'Show', table %></td>
    <td><%= link_to 'Edit', edit_table_path(table) %></td>
    <td><%= link_to 'Destroy', table, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

